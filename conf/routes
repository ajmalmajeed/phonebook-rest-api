# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           @com.ajmal.phonebook.controllers.HomeController.index()


GET    /user                        @com.ajmal.phonebook.controllers.UserController.addUser()

PUT    /user                        @com.ajmal.phonebook.controllers.UserController.updateUser()

DELETE  /user/:idToDelete           @com.ajmal.phonebook.controllers.UserController.deleteUser(idToDelete:Long)

GET     /contact                    @Com.ajmal.phonebook.controllers.ContactController.addContct()

PUT     /contact                    @Com.ajmal.phonebook.controller.ContactController.updateContact()

DELETE  /contact                    @Com.ajmal.phonebook.controller.ContactController.deleleteContact(idToDelete:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)